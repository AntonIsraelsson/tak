{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "rustup@latest",
    "bun@latest",
    "wasm-pack@latest",
    "libiconv@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Setting up development environment...'",
      "rustup default stable",
      "echo 'Rust toolchain:'",
      "cargo --version",
      "wasm-pack --version",
      "echo 'Node.js toolchain:'",
      "bun --version",
      "echo 'Environment ready!'"
    ],
    "scripts": {
      "dev": [
        "echo 'Starting development server...'",
        "cd tak-game && wasm-pack build --target web --out-dir ../tak-app/public",
        "echo 'Starting development server...'",
        "cd tak-app && bun run dev"
      ]
    }
  }
}
