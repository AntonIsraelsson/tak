{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "bun@latest",
    "rustup@latest",
    "wasm-pack@latest",
    "nodejs_18@latest"
  ],
  "shell": {
    "init_hook": [
      "# Configure Rust toolchain",
      "rustup default stable",
      "rustup target add wasm32-unknown-unknown",
      "rustup component add rust-src",
      "",
      "# Verify installations",
      "echo 'Devbox environment ready!'",
      "echo 'Bun version:' $(bun --version)",
      "echo 'Cargo version:' $(cargo --version)",
      "echo 'wasm-pack version:' $(wasm-pack --version)"
    ],
    "scripts": {
      "setup-frontend": "cd frontend && bun install",
      "dev-frontend": "cd frontend && bun run dev",
      "build-wasm": "cd wasm-stuff && wasm-pack build --target web",
      "dev-full": "bun run build-wasm && bun run dev-frontend"
    }
  },
  "env": {
    "CARGO_TARGET_DIR": "./target",
    "RUST_LOG": "info"
  }
}